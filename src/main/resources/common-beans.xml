<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource"
        class = "org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name = "driverClassName" value = "org.postgresql.Driver"/>
        <property name = "url" value = "jdbc:postgresql://94.158.155.216:5432/ticket"/>
        <property name = "username" value = "Vova"/>
        <property name = "password" value = "641947"/>
    </bean>

    <bean id="databasePopulator" class="org.hillel.dao.DatabasePopulator">
        <constructor-arg name = "dataSource" ref="dataSource"/>
    </bean>

    <bean name="DBCPDataAccess" class="org.hillel.dao.DBCPDataAcessImpl" primary="true">
        <constructor-arg name = "dataSource" ref="dataSource"/>
    </bean>

    <bean name="RouteRepository" class="org.hillel.dao.RouteRepositoryTrainImpl" primary="true">
        <constructor-arg name = "dataSource" ref="DBCPDataAccess"/>
    </bean>

    <bean name="StationRepository" class="org.hillel.dao.StationRepositoryImpl" primary="true">
        <constructor-arg name = "dataSource" ref="DBCPDataAccess"/>
    </bean>

<!--    <bean name="JorneyService" class="org.hillel.service.InMemoryJorneyServiceImp" primary="true"/>-->
    <bean name="JorneyService" class="org.hillel.service.JdbcJorneyServiceImp" primary="true">
        <constructor-arg name = "routeRepository" ref="RouteRepository"/>
        <constructor-arg name = "stationRepository" ref="StationRepository"/>
    </bean>

    <bean class="org.hillel.service.TicketClient" primary="true">
        <constructor-arg name = "journeyService" ref="JorneyService"/>
    </bean>

</beans>
